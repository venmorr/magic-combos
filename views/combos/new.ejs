<%- include('../partials/nav') %>

<main>
  <h1> <%= title %></h1>
  <form id="new-form" action="/combos" method="POST">
    <label for="name-input">Name:</label>
    <input 
      type="text"
      name="name" 
      value="<%= combos.name %>" 
      autocomplete="off"
    >
    <label for="description-input">Description:</label>
    <input 
      type="text"
      name="description" 
      value="<%= combos.description %>" 
      autocomplete="off"
    >

    <button type="submit">Add Combo</button>
  </form>
</main>

